---
import MyTick from '@components/ui/icons/MyTick.astro';
import Icon from 'astro-icon';
import { Image } from 'astro:assets';
import bottleImg from 'assets/bottle.jpg';
import { t } from 'i18next';
/* import Link from '@components/ui/Link.astro'; */

import MyLink from '@components/ui/MyLink.astro';

const { item } = Astro.props;
---

<div class='zoom-in max-w-lg rounded overflow-hidden shadow-lg m-4 w-100'>
	<div class='w-100 flex justify-center'>
		<Image src={bottleImg} alt='bottle of wine' height='300' width='170' loading='eager' format='webp' />
	</div>
	<div class='px-6 py-4'>
		<h2 class='text-2xl font-medium mb-2 text-gray-900 text-center'>Palavske modre</h2>
		<div class='border-b-2 border-gray-300 mb-2'></div>
		<p class='text-lg text-gray-700 mb-2'>Druh vína: Růžové víno</p>
		<p class='text-lg text-gray-700 mb-2'>Sběr: Pozdní sběr 2023</p>
		<p class='font-bold text-lg text-gray-700 mb-2'>Cena: 250,00 Kč</p>
		<MyLink
			href="#"
			class='flex gap-2 items-center justify-center mt-4'
			style='secondary'
			rel='noopener'
		>
			<Icon class='w-5 h-5' name='simple-line-icons:basket' />
			{t('$.product.to_cart')}
		</MyLink>
	</div>
</div>
