---
import MyTick from '@components/ui/icons/MyTick.astro';
import Icon from 'astro-icon';
/* import Link from '@components/ui/Link.astro'; */

const { item } = Astro.props;
---

<div class='zoom-in flex flex-col border-2 border-[#D8DEE9] border-opacity-50 py-5 px-6 rounded-md'>
	<div class='text-center'>
		<h3 class='text-lg font-medium text-gray-500'>{item.name}</h3>

		<p class='mt-3 text-2xl font-bold text-gray-700 md:text-3xl'>
			{item.price && typeof item.price === 'object' ? item.price.value : item.price}
		</p>
	</div>
	<ul class='grid mt-8 text-left gap-y-4'>
		{
			item.features.map((item: any) => (
				<li class='flex items-center gap-3 text-gray-800'>
					<div>
						<Icon class='text-secondary w-8' name={item.icon} />
					</div>
					<div class='font-semibold text-lg text-gray-600'>{item.label}</div>
				</li>
			))
		}
	</ul>
	<!-- <div class='flex flex-1 mt-8'>
		<Link href={item.button.link || '#'} block style={item.popular ? 'primary' : 'outline'} class='self-end'>
			{item.button.text || 'Get Started'}
		</Link>
	</div> -->
</div>
